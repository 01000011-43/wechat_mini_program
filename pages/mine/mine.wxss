/* pages/mine/mine.wxss */

page{
  width:750rpx;
  overflow:hidden;
  background:rgb(231, 243, 247);
}

.userinfo{
  background-color:rgb(237, 250, 241);
  height:400rpx;
  width:750rpx;
  border-radius:50rpx;
}



.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  position:relative;
  left:60rpx;
  top:180rpx;
}

.userinfo-nickname{
  color:#aaa;
  position:relative;
  left:60rpx;
  top:180rpx;
  font-size:small;
}

.profile_txt{
  position:relative;
  top:70rpx;
  left:400rpx;
  font-size:small;
  color:#aaa;
}

/*两个导航块*/
.vibutton_item{
  background-color:#fff;
  width:300rpx;
  height:130rpx;
  margin-left:50rpx;
  float:left;
  position:relative;
  bottom:40rpx;
  border-radius:20rpx;
}

.vibutton_icon{
  height:75rpx;
  width:75rpx;
  float:left;
  position:relative;
  top:30rpx;
  left:20rpx;
  margin-right:30rpx;
}

.vibutton_txt{
  position:relative;
  left:20rpx;
  top:25rpx;
}

.vibutton_txt1{
  font-weight:450;
}

.vibutton_txt2{
  font-size:small;
  color:rgb(165, 165, 165);
}

/*导航块*/
.button_area{
  width:650rpx;
  height:260rpx;
  background-color:#fff;
  position:relative;
  left:50rpx;
  display:flex;
  flex-direction:column;
  border-radius:20rpx;

}

.button_item{
  width:650rpx;
  height:130rpx;
  border-bottom: 1rpx solid rgb(235, 238, 237); 
  display:flex;
  flex-direction:row;
}

.button_icon{
  width:100rpx;
  height:100rpx;
  margin:20rpx;
  float:left;
}
.button_img{
  width:80rpx;
  height:80rpx;
}

.button_txt{
  font-size:small;
  width:600rpx;
  height:50rpx;
  padding-top:50rpx;
  color:#666;
}

.kf_button{
  font-size:small;
  font-weight:400;
  color:#666;
  width:600rpx;
  height:100rpx;
  background-color: rgba(255, 255, 255, 0);
  position:relative;
  right:210rpx;
  top:20rpx;
}