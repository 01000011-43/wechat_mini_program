/* pages/confession/confession.wxss */

page{
  background-color:rgb(252, 246, 241);
  width:750rpx;
  overflow-x:hidden;
  padding-bottom:50rpx;
}

.top{
  width:750rpx;
  height:150rpx;
  background-color:#fff;
  overflow:hidden;
}

.search{
  width:650rpx;
  height:60rpx;
  background-color:rgb(238, 236, 236);
  position:relative;
  top:50rpx;
  left:50rpx;
  border-radius:30rpx;
  display:flex;
  flex-direction:row;
}

.search_icon{
  width:50rpx;
  height:50rpx;
  margin-top:10rpx;
  margin-left:20rpx;
}

.search_img{
  width:40rpx;
  height:40rpx;
}

.search_txt{
  color:rgb(138, 136, 136);
  margin-left:20rpx;
  margin-top:10rpx;
  font-size:small;
}

.image{
  width:400rpx;
  height:400rpx;
  position:relative;
  left:90rpx;
}

.memo{
  width:600rpx;
  max-height:500rpx;
  background-color:rgb(241, 228, 198);
  margin:10rpx 20rpx 50rpx 20rpx;
  position:relative;
  left:50rpx;
  bottom:50rpx;
  box-shadow:10rpx  10rpx rgb(185, 166, 131);
  border-radius:20rpx;
}

.memo_txt{
  padding:20rpx;
  color:#520;
  max-height:500rpx;
}

.memo_title{
  color:rgb(122, 122, 122);
  position:relative;
  left:20rpx;
}

.addNew {
  position: fixed;
  width:150rpx;
  height:150rpx;
  font-size: 100rpx;
  color:rgb(81, 133, 88);
  background: rgb(220, 241, 215);
  bottom: 20rpx;
  left:300rpx;
  display: flex;
  justify-content: center;
  border-radius:100%;
  opacity:80%;
}

/*弹窗*/

 .model{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 999;
  opacity: 0.5;
  top: 0;
  left:0;
 }
 .modalDlg{
  width: 80%;
  height:850rpx;
  position: fixed;
  top:350rpx;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: rgb(250, 250, 250);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
 }
 .windowRow{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 110rpx;
  width: 100%;
 }
 .eject_back{
  text-align: center;
  color: #22a522;
  font-size: 30rpx;
  margin: 30rpx;
 }
 .userTitle{
  font-size: 30rpx;
  color: #666;
  margin: 30rpx;
 }
 .wishName{
  width: 100%;
  justify-content:center;
  flex-direction: row;
  display: flex;
  margin-bottom: 30rpx;
 }
 .wish_put{
  width: 80%;
  height:600rpx;
  border: 1px solid gray;
  border-radius: 10rpx;
  font-size:30rpx;
 }


 .wishbnt{
  width: 100%;
  font-size: 50rpx;
  margin-bottom: 30rpx;
 }
 .wishbnt_bt{
  width: 50%;
  background-color: rgb(252, 175, 128);
  color: #b63b02;
  font-size: 30rpx;
  border: 0;
 }